<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://openbox.org/
    file:///usr/share/openbox/menu.xsd">

    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal">
            <action name="Execute"><execute>gnome-terminal</execute></action>
        </item>
        <item label="Chrome">
            <action name="Execute"><execute>google-chrome</execute></action>
        </item>
        <item label="Gvim">
            <action name="Execute"><execute>gvim</execute></action>
        </item>
        <item label="Stardict">
            <action name="Execute"><execute>stardict</execute></action>
        </item>
        <item label="Commander">
            <action name="Execute"><execute>gnome-commander</execute></action>
        </item>
        <item label="Iptux">
            <action name="Execute"><execute>iptux</execute></action>
        </item>

        <!-- This requires the presence of the 'menu' package to work -->
        <menu id="/Debian" />
        <separator />
        <menu id="client-list-menu" />
        <separator />
        <item label="ObConf">
            <action name="Execute"><execute>obconf</execute></action>
        </item>
        <item label="Reconfigure">
            <action name="Reconfigure" />
        </item>
        <item label="Restart">
            <action name="Restart" />
        </item>
        <separator />
        <item label="Exit">
            <action name="Exit" />
        </item>
    </menu>

</openbox_menu>
